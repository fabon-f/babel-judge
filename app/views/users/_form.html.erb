<%= form_with(model: user, class: 'space-y-6', builder: HorizontalFormBuilder) do |form| %>
  <% if user.errors.any? %>
    <h2 class="text-red-600 text-xl"><%= user.errors.count %>件のエラーが発生しました。</h2>
  <% end %>

  <%= render HorizontalFormRowComponent.new do |component| %>
    <% component.with_label do %>
      <%= form.label :username, 'ユーザー名' %>
    <% end %>
    <% component.with_field do %>
      <%= form.text_field :username, required: true, class: 'rounded' %>
    <% end %>
    <% component.with_description do %>
      <%= form.error_message :username %>
      <div class="text-gray-800 text-sm">半角英数字とアンダースコア(<code>_</code>)のみが使用できます。</div>
    <% end %>
  <% end %>

  <%= render HorizontalFormRowComponent.new do |component| %>
    <% component.with_label do %>
      <%= form.label :email, 'メールアドレス' %>
    <% end %>
    <% component.with_field do %>
      <%= form.email_field :email, placeholder: 'user@example.com', required: true, class: 'rounded' %>
    <% end %>
    <% component.with_description do %>
      <%= form.error_message :email %>
    <% end %>
  <% end %>

  <%= render HorizontalFormRowComponent.new do |component| %>
    <% component.with_label do %>
      <%= form.label :password, 'パスワード' %>
    <% end %>
    <% component.with_field do %>
      <%= form.password_field :password, required: true, class: 'rounded' %>
    <% end %>
    <% component.with_description do %>
      <%= form.error_message :password %>
      <div class="text-gray-800 text-sm">8文字以上</div>
    <% end %>
  <% end %>

  <%= render HorizontalFormRowComponent.new do |component| %>
    <% component.with_label do %>
      <%= form.label :password_confirmation, 'パスワード(確認)' %>
    <% end %>
    <% component.with_field do %>
      <%= form.password_field :password_confirmation, required: true, class: 'rounded' %>
    <% end %>
    <% component.with_description do %>
      <%= form.error_message :password_confirmation %>
    <% end %>
  <% end %>

  <div class="sm:flex justify-end">
    <div class="sm:w-2/3">
      <%= form.submit '登録', class: 'bg-blue-600 hover:bg-blue-400 text-white py-2 px-4 rounded cursor-pointer' %>
    </div>
  </div>
<% end %>
