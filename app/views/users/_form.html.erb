<%= form_with(model: user, class: 'space-y-6') do |form| %>
  <% if user.errors.any? %>
    <div class="text-red-600">
      <h2><%= user.errors.count %>件のエラーが発生しました。</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li class="list-disc list-inside"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div class="sm:flex">
      <div class="block sm:w-1/3 px-4 sm:flex sm:justify-end sm:items-center">
        <%= form.label :username, 'ユーザー名' %>
      </div>
      <%= form.text_field :username, class: 'rounded' %>
    </div>
    <div class="sm:flex justify-end mt-2">
      <div class="text-gray-800 text-sm sm:w-2/3">半角英数字とアンダースコア(<code>_</code>)のみが使用できます。</div>
    </div>
  </div>

  <div class="sm:flex">
    <div class="block sm:w-1/3 px-4 sm:flex sm:justify-end sm:items-center">
      <%= form.label :email, 'メールアドレス' %>
    </div>
    <%= form.text_field :email, placeholder: 'user@example.com', class: 'rounded' %>
  </div>

  <div>
    <div class="sm:flex">
      <div class="block sm:w-1/3 px-4 sm:flex sm:justify-end sm:items-center">
        <%= form.label :password, 'パスワード' %>
      </div>
      <%= form.password_field :password, class: 'rounded' %>
    </div>
    <div class="sm:flex justify-end">
      <div class="text-gray-800 text-sm sm:w-2/3 mt-2">8文字以上</div>
    </div>
  </div>

  <div class="sm:flex">
    <div class="block sm:w-1/3 px-4 sm:flex sm:justify-end sm:items-center">
      <%= form.label :password_confirmation, 'パスワード(確認)' %>
    </div>
    <%= form.password_field :password_confirmation, class: 'rounded' %>
  </div>

  <div class="sm:flex justify-end">
    <div class="sm:w-2/3">
      <%= form.submit '登録', class: 'bg-blue-600 hover:bg-blue-400 text-white py-2 px-4 rounded cursor-pointer' %>
    </div>
  </div>
<% end %>
